@model AddExpenseServiceModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-ld-8 offset-ld-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>

        <form method="post">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Utilitys, Salary, Sales, etc...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpensDate">Date</label>
                <input asp-for="ExpensDate" class="form-control" placeholder="@DateTime.UtcNow.ToString(" dd /MM/yyyy")">
                <span asp-validation-for="ExpensDate" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount">Amount</label>
                <input asp-for="Amount" class="form-control" placeholder="Total Amount">
                <span asp-validation-for="Amount" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes">Notes</label>
                <textarea asp-for="Notes" rows="4" class="form-control" placeholder="It can be easy to lose sight of your budget, so add notes..."></textarea>
                <span asp-validation-for="Notes" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpenseCategoryId"></label>
                <select asp-for="ExpenseCategoryId" class="form-control">
                    @foreach (var category in Model.ExpenseCategories)
                    {
                    <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="ExpenseCategoryId" class="small text-danger"></span>
            </div>
            <input style='margin-right:16px' class="btn btn-primary float-left mt-3" type="submit" value="Save" />
            <a asp-action="All" style='margin-right:16px' class="btn btn-dark float-left mt-3">Back</a>
        </form>
    </div>
</div>