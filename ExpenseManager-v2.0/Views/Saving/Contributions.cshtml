@model IEnumerable<ListingContributionServiceModel>

@{
    ViewBag.Title = "All Contributions";
}

@if (Model.Any())
{
    <h3 class="text-center">@ViewBag.Title</h3>
}
<hr />
<p>
    <a asp-action="Total" style='margin-right:16px' class="btn btn-dark float-left mt-3">Back</a>
</p>
<table id="tblData" class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this record?')">
                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
</table>
    @section Scripts{
        <script>

        </script>
    }
