@model BorrowedLibraryServiceModel

@{
    ViewBag.Title = "All Borrowed Items";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>

        <div class="alert alert-success" role="alert">
            <p>Total count of the items which you still owe.</p>
            <hr>
            <div class="list-group-item d-flex justify-content-between align-items-center">
                @Html.DisplayNameFor(model => model.Total): <span>  @Html.DisplayFor(model => model.Total)</span>
            </div>
        </div>        
    </div>
</div>

