@model AddItemServiceModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-ld-8 offset-ld-3 col-xl-6">
        <h2 class="heading-margin text-center">Add Borrowed Item</h2>

        <form method="post">
            <div class="form-group">
                <label asp-for="Name">Amount</label>
                <input asp-for="Name" class="form-control" placeholder="Name of the item.">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Owner">Amount</label>
                <input asp-for="Owner" class="form-control" placeholder="Name of his Owner.">
                <span asp-validation-for="Owner" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date">Date</label>
                <input asp-for="Date" class="form-control" placeholder="@DateTime.UtcNow.ToString("dd/MM/yyyy")">
                <span asp-validation-for="Date" class="small text-danger"></span>
            </div>
            <input style='margin-right:16px' class="btn btn-primary float-left mt-3" type="submit" value="Save" />
            <a asp-action="Index" style='margin-right:16px' class="btn btn-dark float-left mt-3">Back</a>
        </form>
    </div>
</div>
